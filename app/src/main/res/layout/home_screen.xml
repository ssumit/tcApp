<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:orientation="vertical"
    >

    <tc.app.customViews.CharacterRequestTextView
        android:id="@+id/home_screen_simple_character_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/home_screen_query_result_text_size"
        />

    <tc.app.customViews.CharacterIteratorTextView
        android:id="@+id/home_screen_character_iterator_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/home_screen_query_result_text_size"
        />

    <tc.app.customViews.WordCounterTextView
        android:id="@+id/home_screen_character_count_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/home_screen_query_result_text_size"
        />

    <TextView
        android:id="@+id/home_screen_request_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/home_screen_request_button_label"
        android:textColor="@color/white"
        android:textSize="@dimen/home_screen_query_button_text_size"
        />

</LinearLayout>